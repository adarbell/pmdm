<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".BookDetailActivity">

    <ImageView
        android:id="@+id/bookdetail_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/bookdetail_image"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver" />
    </LinearLayout>

    <TextView
        android:id="@+id/bookdetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerLayout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/bookdetail_image"
        android:maxLines="3"
        android:text="Esto es el título"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bookdetail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookdetail_image"
        android:layout_marginTop="15dp"
        android:text="Descripción del libro"
        android:textSize="15sp" />

</RelativeLayout>