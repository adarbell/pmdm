<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/zone_item_name"
        android:paddingTop="20dp"
        android:text="Nombre de la zona"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zone_item_name"
        android:id="@+id/zone_item_price"
        android:text="Precio/kg: 5â‚¬"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/zone_item_name"
        android:id="@+id/zone_item_image"
        android:src="@drawable/europe"/>

</RelativeLayout>