<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_person_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_person_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona imagen"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:id="@+id/img_11"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_12"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_13"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_21"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_22"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_23"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_31"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_32"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
            <ImageView
                android:id="@+id/img_33"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/chico"/>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imagen seleccionada "
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/selected_image"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btSubmit"/>

</LinearLayout>